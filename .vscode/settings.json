{
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.parallelJobs": 4,
  "cmake.configureSettings": {
    "CMAKE_BUILD_TYPE": "Debug"
  },
  "cmake.generator": "MinGW Makefiles",
  "cmake.debugConfig": {
    "cwd": "${workspaceFolder}"
  },
  "files.associations": {
    ".fantomasignore": "ignore",
    "*.cpp": "cpp",
    "*.h": "cpp",
    "array": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "list": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    "string_view": "cpp",
    "format": "cpp",
    "generator": "cpp",
    "initializer_list": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stacktrace": "cpp",
    "text_encoding": "cpp",
    "regex": "cpp",
    "valarray": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "algorithm": "cpp",
    "map": "cpp",
    "memory": "cpp",
    "any": "cpp"
  },
  "files.exclude": {
    "**/build": false
  },
  "debug.console.closeOnEnd": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "debug.onTaskErrors": "showErrors",
  "debug.toolBarLocation": "floating",
  "debug.saveBeforeStart": "allEditorsInActiveGroup",
  "editor.defaultFormatter": "ms-vscode.cpptools",
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "C_Cpp.formatting": "vcFormat",
  "C_Cpp.vcFormat.indent.caseContents": true,
  "C_Cpp.vcFormat.indent.preprocessor": "none",
  "C_Cpp.vcFormat.indent.namespaceContents": true,
  "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "ignore",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
  "C_Cpp.default.compilerPath": "C:/MinGW/bin/g++.exe",
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--query-driver=C:/MinGW/bin/g++.exe",
    "--compile-commands-dir=${workspaceFolder}/build",
  ],
  "clangd.checkUpdates": true,
  "clangd.onConfigChanged": "restart"
}